extends layout
import react from 'react'
const isEmpty = !cart.line_items?.length
block content
  h2 Your Cart
  if cart.line_items.length === 0
    p Your cart is empty.
  else
    table
      thead
        tr
          th Product
          th Quantity
          th Price
          th Total
      tbody
        each item in cart
          tr
            td #{item.name}
            td #{item.quantity}
            td $#{item.price}
            td $#{item.quantity * item.price}
  .checkout
    form(action="/checkout" method="post")
      button(type="submit") Checkout
