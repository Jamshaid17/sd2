extends layout

block content
  h2 Your Cart
  if cart.length === 0
    p Your cart is empty.
  else
    table
      thead
        tr
          th Product
          th Quantity
          th Price
          th Total
      tbody
        each item in cart
          tr
            td #{item.name}
            td 1
            td $#{item.price}
            td $#{1 * item.price}
  .checkout
    form(action="/checkout" method="post")
      button(type="submit") Checkout
